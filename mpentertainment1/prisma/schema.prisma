generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String?  @unique
  name      String?
  role      String   @default("user")
  createdAt DateTime @default(now())
}

model Event {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  date        DateTime
  venue       String
  status      String   @default("open")
  description String   @default("")
  createdAt   DateTime @default(now())
}

model Announcement {
  id        String   @id @default(cuid())
  slug      String   @unique
  title     String
  content   String   @default("")
  pinned    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Ticket {
  id        String   @id @default(cuid())
  eventId   String
  holder    String
  zone      String
  seat      String
  status    String   @default("unused")
  createdAt DateTime @default(now())
}

model SeatingMap {
  id      String @id @default(cuid())
  eventId String @unique
  svg     String
}

model Order {
  id        String   @id @default(cuid())
  userId    String?
  eventId   String?
  total     Int      @default(0)
  status    String   @default("mock")
  createdAt DateTime @default(now())
}
